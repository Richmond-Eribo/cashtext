    gap: 40px;
  }

  .grid {
    display: flex;
    flex-direction: column;
    // justify-content: space-between;
    gap: 20px;
    /* align-items: flex-start; */
    /* align-self: stretch; */

    /* // medium to large */
    @include respond-to("medium") {
      flex-direction: row;
    }
  }

  .title {
    color: var(--Base-Primary);
    text-align: center;
    font-size: 44px;
    font-style: normal;
    font-weight: 750;
    line-height: normal;

    /* // medium to large */
    @include respond-to("medium") {
      font-size: 72px;
    }
  }
</style>
